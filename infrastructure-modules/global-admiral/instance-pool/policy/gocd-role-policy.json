{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Effect": "Allow",
      "Action": [
        "logs:*"
      ],
      "Resource": "*"
    },
    {
      "Effect": "Allow",
      "Action": [
        "s3:*"
      ],
      "Resource": [
        "${config_bucket_arn}/gocd",
        "${config_bucket_arn}/gocd/*",
        "${cloudinit_bucket_arn}/gocd",
        "${cloudinit_bucket_arn}/gocd/*",
        "arn:aws:s3:::${tf_state_bucket_name}",
        "arn:aws:s3:::${tf_state_bucket_name}/*"
      ]
    },
    {
        "Effect": "Deny",
        "Action": [
            "s3:Create*",
            "s3:Put*",
            "s3:Delete*"
        ],
        "Resource": [
            "arn:aws:s3:::${tf_state_bucket_name}/global-admiral/*",
            "arn:aws:s3:::${tf_state_bucket_name}/dev/*",
            "arn:aws:s3:::${tf_state_bucket_name}/qa/*",
            "arn:aws:s3:::${tf_state_bucket_name}/prod/terraform.tfstate",
            "arn:aws:s3:::${tf_state_bucket_name}/stage/terraform.tfstate"
        ]
    },
    {
      "Effect": "Allow",
      "Action": [
        "s3:List*",
        "s3:Get*"
      ],
      "Resource": [
        "${config_bucket_arn}/etcd/initial-cluster",
        "${config_bucket_arn}/docker-registry/registry-certificates/*",
        "arn:aws:s3:::${prod_cloudinit_bucket_name}/",
        "arn:aws:s3:::${prod_cloudinit_bucket_name}/*",
        "arn:aws:s3:::${stage_cloudinit_bucket_name}/",
        "arn:aws:s3:::${stage_cloudinit_bucket_name}/*"
      ]
    },
    {
        "Effect": "Allow",
        "Action": [
            "s3:Put*"
        ],
        "Resource": [
            "arn:aws:s3:::${prod_config_bucket_name}/keypairs",
            "arn:aws:s3:::${prod_config_bucket_name}/keypairs/*",
            "arn:aws:s3:::${stage_config_bucket_name}/keypairs",
            "arn:aws:s3:::${stage_config_bucket_name}/keypairs/*"
        ]
    },
    {
      "Effect": "Allow",
      "Action": [
        "ec2:Describe*",
        "autoscaling:Describe*"
      ],
      "Resource": [
        "*"
      ]
    },
    {
      "Effect": "Allow",
      "Action": [
        "route53:*"
      ],
      "Resource": [
        "arn:aws:route53:::*"
      ]
    },
    {
      "Effect": "Allow",
      "Action": [
        "iam:*",
        "SNS:*",
        "ec2:*",
        "autoscaling:*",
        "elasticloadbalancing:*",
        "cloudwatch:*"
      ],
      "Resource": "*"
    },
    {
      "Sid": "PackerPolicy",
      "Effect": "Allow",
      "Action": [
        "ec2:AttachVolume",
        "ec2:CreateVolume",
        "ec2:DeleteVolume",
        "ec2:CreateKeypair",
        "ec2:DeleteKeypair",
        "ec2:DescribeSubnets",
        "ec2:CreateSecurityGroup",
        "ec2:DeleteSecurityGroup",
        "ec2:AuthorizeSecurityGroupIngress",
        "ec2:CreateImage",
        "ec2:CopyImage",
        "ec2:RunInstances",
        "ec2:TerminateInstances",
        "ec2:StopInstances",
        "ec2:DescribeVolumes",
        "ec2:DetachVolume",
        "ec2:DescribeInstances",
        "ec2:CreateSnapshot",
        "ec2:DeleteSnapshot",
        "ec2:DescribeSnapshots",
        "ec2:DescribeImages",
        "ec2:DescribeVPCs",
        "ec2:RegisterImage",
        "ec2:CreateTags",
        "ec2:ModifyImageAttribute"
      ],
     "Resource": "*"
   }
  ]
}